<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - CAAP2</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)

    <style>
        body {
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <header class="mb-4">
            <h1 class="text-primary">CAAP2 - Sistema de Órdenes</h1>
            <hr />
        </header>

        @RenderBody()
    </div>

    <!-- Scripts JS: jQuery + Bootstrap + Validación -->
