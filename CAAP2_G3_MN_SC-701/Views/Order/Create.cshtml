@model CAAP2.Models.Order

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Crear Orden";
}

<h2>Crear nueva orden</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="OrderDetail" class="form-label"></label>
        <input asp-for="OrderDetail" class="form-control" />
        <span asp-validation-for="OrderDetail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TotalAmount" class="form-label"></label>
        <input asp-for="TotalAmount" class="form-control" />
        <span asp-validation-for="TotalAmount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Priority" class="form-label"></label>
        <input asp-for="Priority" class="form-control" />
        <span asp-validation-for="Priority" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="OrderTypeId" class="form-label">Tipo de Orden</label>
        <select asp-for="OrderTypeId" class="form-control" asp-items="ViewBag.OrderTypes">
            <option value="">-- Seleccione --</option>
        </select>
        <span asp-validation-for="OrderTypeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserID" class="form-label">Usuario</label>
        <select asp-for="UserID" class="form-control" asp-items="ViewBag.Users">
            <option value="">-- Seleccione --</option>
        </select>
        <span asp-validation-for="UserID" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Crear</button>
    <a href="/Order" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}