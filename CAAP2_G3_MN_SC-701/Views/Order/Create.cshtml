@model CAAP2.Models.Order

@{
    ViewData["Title"] = "Crear Orden";
}

<h2>Crear nueva orden</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="OrderDetail"></label>
        <input asp-for="OrderDetail" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TotalAmount"></label>
        <input asp-for="TotalAmount" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Priority"></label>
        <input asp-for="Priority" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="OrderTypeId">Tipo de Orden</label>
        <select asp-for="OrderTypeId" class="form-control" asp-items="ViewBag.OrderTypes"></select>
    </div>
    <div class="form-group">
        <label asp-for="UserID">Usuario</label>
        <select asp-for="UserID" class="form-control" asp-items="ViewBag.Users"></select>
    </div>
    <button type="submit" class="btn btn-primary">Crear</button>
</form>
