@model IEnumerable<CAAP2.Models.Order>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Lista de Órdenes";
}

<h2 class="text-success mb-4">Lista de Órdenes</h2>

<a href="/Order/Create" class="btn btn-success mb-3">
    <i class="bi bi-plus-circle"></i> Crear nueva orden
</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Usuario</th>
            <th>Detalle</th>
            <th>Prioridad</th>
            <th>Monto</th>
            <th>Estado</th>
            <th>Tipo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderID</td>
                <td>@order.User?.FullName</td>
                <td>@order.OrderDetail</td>
                <td>@order.Priority</td>
                <td>@order.TotalAmount.ToString("C")</td>
                <td>@order.Status</td>
                <td>@order.OrderType?.Name</td>
                <td>
                    <a href="/Order/Details/@order.OrderID" class="btn btn-sm btn-info me-1">👁 Ver</a>
                    <a href="/Order/Edit/@order.OrderID" class="btn btn-sm btn-warning me-1">✏️ Editar</a>
                    <a href="/Order/Delete/@order.OrderID" class="btn btn-sm btn-danger">🗑 Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
